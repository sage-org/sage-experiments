
PREFIX  foaf: <http://xmlns.com/foaf/0.1/>
PREFIX  prop: <http://dbpedia.org/property/>

SELECT  ?s ?nome ?nascimento ?lugar
WHERE
  { ?s foaf:name ?nome .
    ?s <http://www.w3.org/1999/02/22-rdf-syntax-ns#type> foaf:Person
    OPTIONAL
      { ?s prop:birthdate ?nascimento }
    OPTIONAL
      { ?s prop:birthplace ?lugar }
    FILTER ( regex(str(?nome), "Mel Gibson", "i") && isLiteral(?nome) )
  }