
PREFIX  p:    <http://dbpedia.org/property/>

CONSTRUCT 
  { ?a ?p ?b .
    ?c ?q ?a .
    ?x ?r1 ?r .
    ?r ?r2 ?y .}
WHERE
  {   { ?a ?p ?b }
    UNION
      { ?c ?q ?a }
    OPTIONAL
      { ?a p:redirect ?r
          { ?x ?r1 ?r }
        UNION
          { ?r ?r2 ?y }
      }
    FILTER ( ?a = <http://dbpedia.org/resource/Aquilia_Severa> )
  }